# Backend Configuration Example
# Copy this file to .env and modify as needed

# Flask Configuration
SECRET_KEY=change-this-to-a-random-secret-key
DEBUG=False

# JWT Configuration
JWT_SECRET_KEY=change-this-to-a-different-random-secret-key

# Database Configuration
# SQLite (default)
DATABASE_URL=sqlite:///network_monitor.db

# PostgreSQL (production recommended)
# DATABASE_URL=postgresql://username:password@localhost:5432/network_monitor

# MySQL
# DATABASE_URL=mysql://username:password@localhost:3306/network_monitor

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Monitoring Configuration
TRAFFIC_SAMPLE_INTERVAL=1
MAX_HISTORY_RECORDS=1000

# Alert Thresholds
CPU_THRESHOLD=80
MEMORY_THRESHOLD=80
NETWORK_THRESHOLD=90

# Packet Capture Configuration
CAPTURE_TIMEOUT=60
MAX_PACKETS=1000
