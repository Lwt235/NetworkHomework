# Backend Configuration Example
# Copy this file to .env and modify as needed

# Flask Configuration
SECRET_KEY=change-this-to-a-random-secret-key
DEBUG=False
FLASK_DEBUG=False

# JWT Configuration
JWT_SECRET_KEY=change-this-to-a-different-random-secret-key

# Database Configuration - MySQL only
DATABASE_URL=mysql+pymysql://network_monitor_user:your_secure_password@localhost:3306/network_monitor

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Monitoring Configuration
TRAFFIC_SAMPLE_INTERVAL=1
MAX_HISTORY_RECORDS=1000

# Alert Thresholds
CPU_THRESHOLD=80
MEMORY_THRESHOLD=80
DISK_THRESHOLD=90
NETWORK_THRESHOLD=90

# Packet Capture Configuration
CAPTURE_TIMEOUT=60
MAX_PACKETS=1000

# Network Interface for Packet Capture
# Leave empty or set to 'None' to use default interface
# Windows example: CAPTURE_INTERFACE=Intel(R) Wi-Fi 6E AX211 160MHz
# Linux example: CAPTURE_INTERFACE=eth0
# macOS example: CAPTURE_INTERFACE=en0
CAPTURE_INTERFACE=
